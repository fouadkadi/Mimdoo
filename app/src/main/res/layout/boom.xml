<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80bdc3c7"

    >


    <Button
        android:id="@+id/buttong"
        android:layout_width="wrap_content"
        android:layout_height="90dp"

        android:layout_column="1"
        android:layout_marginBottom="32dp"
        android:layout_row="2"
        android:layout_x="26dp"
        android:layout_y="397dp"
        android:background="@drawable/g_bt"
        android:text="G"
        android:textColor="#fff"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonr"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_x="282dp"
        android:layout_y="15dp"
        android:alpha="1"
        android:background="@drawable/r_bt"
        android:text="R"
        android:textColor="#fff"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttony"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttony"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_x="148dp"
        android:layout_y="214dp"
        android:background="@drawable/y_bt"
        android:text="Y"
        android:textColor="#fff"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttong" />

</RelativeLayout>